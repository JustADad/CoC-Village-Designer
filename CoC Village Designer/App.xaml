<Application x:Class="JustADadSoftware.VillageDesigner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:JAD="clr-namespace:JustADadSoftware.VillageDesigner"
             StartupUri="MainWindow.xaml" ShutdownMode="OnLastWindowClose">
    <Application.Resources>
        <Style TargetType="JAD:ToolbarGroupButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="JAD:ToolbarGroupButton">
                        <ContentPresenter Content="{TemplateBinding Content}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="JAD:ToolbarGroupItemButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="JAD:ToolbarGroupItemButton">
                        <ContentPresenter Content="{TemplateBinding Content}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
